<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quancheng.saluki.oauth2.zuul.dao.RouteDao">

	<select id="get" resultType="com.quancheng.saluki.oauth2.zuul.domain.RouteDO">
		select
		`route_id`,`path`,`service_id`,`service_name`,`method_name`,`url`,`retryable`
		,`enabled`,`strip_prefix`,`grpc`,`dubbo`,`gmt_create`,`gmt_modified`
		from gateway_route
		where route_id = #{value}
	</select>

	<select id="list" resultType="com.quancheng.saluki.oauth2.zuul.domain.RouteDO">
		select
		`route_id`,`path`,`service_id`,`service_name`,`method_name`,`url`,`retryable`
		,`enabled`,`strip_prefix`,`grpc`,`dubbo`,`gmt_create`,`gmt_modified`
		from gateway_route
		<where>
			<if test="routeId != null and routeId != ''"> and route_id = #{routeId} </if>
			<if test="path != null and path != ''"> and path = #{path} </if>
			<if test="serviceId != null and serviceId != ''"> and service_id = #{serviceId} </if>
			<if test="serviceName != null and serviceName != ''"> and service_name = #{serviceName} </if>
			<if test="grpc != null and grpc != ''"> and grpc = #{grpc} </if>
			<if test="dubbo != null and dubbo != ''"> and dubbo = #{dubbo} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by route_id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from gateway_route
		<where>
			<if test="routeId != null and routeId != ''"> and route_id = #{routeId} </if>
			<if test="path != null and path != ''"> and path = #{path} </if>
			<if test="serviceId != null and serviceId != ''"> and service_id = #{serviceId} </if>
			<if test="serviceName != null and serviceName != ''"> and service_name = #{serviceName} </if>
			<if test="grpc != null and grpc != ''"> and grpc = #{grpc} </if>
			<if test="dubbo != null and dubbo != ''"> and dubbo = #{dubbo} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.quancheng.saluki.oauth2.zuul.domain.RouteDO"
		useGeneratedKeys="true" keyProperty="route_id">
		insert into gateway_route
		(
		`path`,
		`service_id`,
		`service_name`,
		`method_name`,
		`url`,
		`retryable`,
		`enabled`,
		`strip_prefix`,
		`grpc`,
		`dubbo`,
		`gmt_create`,
		`gmt_modified`
		)
		values
		(
		#{path},
		#{serviceId},
		#{retryable},
		#{enabled},
		#{stripPrefix},
		#{serviceName},
		#{methodName},
		#{grpc},
		#{dubbo},
		sysdate(),
		sysdate()
		)
	</insert>

	<update id="update" parameterType="com.quancheng.saluki.oauth2.zuul.domain.RouteDO">
		update sys_dept
		<set>
			`path`=#{path}
			`service_id`=#{serviceId}
			`service_name`=#{serviceName}
			`method_name`=#{methodName}
			`url`=#{url}
			`retryable`=#{retryable}
			`enabled`=#{enabled}
			`strip_prefix`=#{stripPrefix}
			`grpc`=#{grpc}
			`dubbo`=#{dubbo}
			`gmt_modified`=sysdate()
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="orderNum != null">`order_num` = #{orderNum}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where dept_id = #{deptId}
	</update>

	<delete id="remove">
		delete from sys_dept where dept_id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from sys_dept where dept_id in
		<foreach item="deptId" collection="array" open="(" separator=","
			close=")">
			#{deptId}
		</foreach>
	</delete>

	<select id="listParentDept" resultType="long">
		select DISTINCT parent_id
		from sys_dept
	</select>

	<select id="getDeptUserNumber" resultType="int">
		select count(*) from
		sys_user where dept_id = #{value}
	</select>
</mapper>